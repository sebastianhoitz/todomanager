@import './mixin'

body, html
	font-family:Georgia
	font-size:25px
	background:#f0f0f0
	margin:0
	padding:0

#app
	margin:50px auto
	padding:2em
	width:500px
	background:#fff
	border-radius:5px
	box-shadow:0px 0px 10px rgba(0,0,0,0.4)

	h1
		text-align:center

	input[type=text]
		font-size:25px
		width:500px
		padding:8px 0

	input[type=submit]
		display:none

	ul
		list-style:none
		padding-left:0

	ul li
		padding:10px 0
		border-bottom:solid 1px #ddd

	ul li input
		position:relative
		top:-4px

	label:hover
		cursor:pointer

	li .edit
		display:none

	li:hover
		background:lightyellow

	li.editing .edit
		display:block

	li.editing label,
	li.editing input[type=checkbox]
		display:none
